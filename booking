  <a href="mywedtesting.html" class="back-btn">⬅ กลับหน้าหลัก</a>

<script>
const scriptURL = 'https://script.google.com/macros/s/AKfycbysTp2UgZoos9lIPav0-nFRURMWQKCmXpmbwLble5KQbE_NV1eKW2lPEHS2aPqKlOAIOw/exec';
const form = document.getElementById('bookingForm');

form.addEventListener('submit', e => {
  e.preventDefault();
  fetch(scriptURL, { method: 'POST', body: new FormData(form) })
    .then(res => res.json())
    .then(res => {
      if (res.result === 'success') {
        alert('ส่งข้อมูลสำเร็จ');
        form.reset();
      } else {
        alert('เกิดข้อผิดพลาด');
      }
    })
    .catch(err => alert('Error: ' + err.message));
});
</script>

