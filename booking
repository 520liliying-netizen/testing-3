      <input type="date" id="booking_date" name="booking_date" required />

      <label for="program">โปรแกรมที่สนใจ / ข้อความเพิ่มเติม</label>
      <textarea id="program" name="program" rows="4" placeholder="กรอกโปรแกรมที่สนใจ หรือข้อมูลเพิ่มเติม" required></textarea>

      <button type="submit">ส่งข้อมูล</button>
    </form>
